<div class="container">
  <h1><%= @list.name %> - <%= to_five_stars(@list.avg_rating) %></h1>
  <ul class='list-group'>
    <% @bookmarks.each do |bookmark| %>
      <li class='list-group-item'>
        <%= "#{bookmark.movie.title} - Rating: #{bookmark.movie.rating}/10" %>
        <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete}, class: 'btn' do %>
          <i class="fa-solid fa-trash trash"></i>
        <% end %>
      </li>
    <% end %>
  </ul>

  <%= link_to "Add Movie to list", new_list_bookmark_path(@list), class: 'btn btn-primary' %>

  <%= link_to "Back", lists_path, class: 'btn btn-secondary' %>

  <%= simple_form_for([@list, @review]) do |f| %>
    <%= f.input :comment %>
    <%= f.input :rating %>
    <%= f.submit class: 'btn btn-dark'%>
  <% end %>

  <ul class='list-group'>
    <% @reviews.each do |review| %>
       <li class='list-group-item'><%= "#{review.rating}/5 - #{review.comment}" %></li>
    <% end %>
  </ul>
</div>
